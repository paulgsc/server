###############################################
#                SECURITY KEYS
###############################################

# HMAC signing key for JWTs or internal services
HMAC_KEY="CHANGE_ME_HMAC_KEY"

# OAuth client secret (Google, GitHub, etc.)
CLIENT_SECRET_FILE="./client_secret_file.json"

# Token for GitHub API usage
GITHUB_API_TOKEN="REPLACE_WITH_YOUR_GITHUB_PAT"

###############################################
#                   EMAIL
###############################################

# Email / notification service target address or API endpoint
EMAIL_SERVICE_URL="your_email@example.com"

###############################################
#                   OBS
###############################################

# OBS WebSocket connection
OBS_WEBSOCKET_PWD="CHANGE_ME_OBS_PASSWORD"
OBS_WEBSOCKET_IP="127.0.0.1"

###############################################
#                   PROJECT
###############################################

# Root directory of your monorepo/server
REPO_ROOT="/home/paulg/dev/server"

###############################################
#                   STORAGE
###############################################

# Where your app stores data
STORAGE="/mnt/storage/users/dev/databases/hopium"

# SQLite database location
DATABASE_URL="sqlite://${STORAGE}/hopium.db"

###############################################
#                  AUDIO I/O
###############################################

# ALSA device identifiers
AUDIO_DEVICE_NAME="hw:0,0"
AUDIO_DEVICE_INDEX=2

###############################################
#            Whisper Model Loading
###############################################

# Path **on host** to the Whisper model file
WHISPER_MODELS_PATH="/mnt/storage/users/dev/models/whisper-models/ggml-base.en-q5_1.bin"

# Path **inside container** (if using Docker)
WHISPER_MODEL="/models/ggml-base.en-q5_1.bin"

# Number of threads Whisper uses
WHISPER_THREADS=2

# Audio buffer duration in seconds (lower = more accurate = more CPU)
BUFFER_DURATION=3

###############################################
#                  NATS
###############################################

NATS_URL="nats://localhost:4222"

###############################################
#                OpenTelemetry
###############################################

OTEL_EXPORTER_OTLP_ENDPOINT="http://otel-collector:4317"
OTEL_SERVICE_NAME="transcriber"

###############################################
#                  LOGGING
###############################################

# Global log level
RUST_LOG="debug,transcriber=info"

